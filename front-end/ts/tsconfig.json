{
    "compilerOptions": {
        "outDir": "../js/", //输出路径
        "strict": true, //超级严格模式
        "newLine": "lf", //Unix风格换行
        "sourceMap": true, //调试信息
        "extendedDiagnostics": false, //详细的诊断信息
        "declaration": false,//生成声明文件
        "removeComments": true, //删除所有注释
        "module": "ES6", //ES6模块
        "target": "ES6" //生成ES6标准的js文件
    },
    "files": [
        "a.ts" //源文件
    ]
}