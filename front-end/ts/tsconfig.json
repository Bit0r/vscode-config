{
    "compilerOptions": {
        "outDir": "../js/", //输出路径
        "alwaysStrict": true, //生成严格模式的JS
        "noImplicitAny": true, //禁止隐式any类型
        "noUnusedLocals": true, //禁止声明未使用的局部变量  
        "noUnusedParameters": true, //禁止声明未使用的函数参数
        "newLine": "lf", //Unix风格换行
        "sourceMap": true, //调试信息
        "extendedDiagnostics": false, //详细的诊断信息
        "declaration": false, //生成声明文件
        "removeComments": true, //删除所有注释
        "module": "ES6", //ES6模块
        "moduleResolution": "node", //模块解析方式为node
        "target": "ES2017", //生成ES2017标准的js文件，可使用async/await
        //设置d.ts的根目录
        "typeRoots": [
            "./node_modules/@types/"
        ],
        //启用的外部库
        "types": []
    },
    "files": [
        "a.ts"
    ],
    //"include": [
    //    "**/*.ts"
    //],
    //"exclude": [
    //    "node_modules",
    //    "**/*.d.ts"
    //]
}