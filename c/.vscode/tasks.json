{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "command": "cc",
            "args": [
                "${relativeFile}", // 指定编译源代码文件
                "-o",
                "bin/${fileBasenameNoExtension}", // 指定输出文件名
                "-O0", // 优化级别
                "-ggdb3", // 生成和调试有关的信息
                "-Wall", // 全部的警告
                "-Wextra", // 额外的警告
                "-pedantic", // 严格的ISO C标准，不使用GNU拓展
                "-std=c17", // 使用c17标准
                "-fno-common" // 禁止全局符号冲突
                //"-Wno-format",
                //"-finput-charset=UTF-8", //输入编译器文本编码 默认为UTF-8
                //"-fexec-charset=GB18030", //输出的二进制文件的文本编码 Win平台默认为GB18030
            ],
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
